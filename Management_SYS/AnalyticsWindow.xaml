<Window x:Class="Management_SYS.AnalyticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Аналітичний Модуль (RFM)" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Сегментація (K-Means) та Прогнозування (Regression)" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <DataGrid x:Name="RfmGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="1" BorderBrush="Gray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="50"/>
                <DataGridTextColumn Header="Ім'я Клієнта" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Сегмент" Binding="{Binding SegmentName}" Width="150" FontWeight="Bold"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Margin="10" BorderBrush="LightGray" BorderThickness="1" Padding="10" Background="#FAFAFA">
            <StackPanel>
                <TextBlock Text="Прогнозування продажів (Linear Regression)" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Оберіть клієнта:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="ClientComboBox" Width="200" DisplayMemberPath="Name" SelectedValuePath="CustomerId"/>

                    <Button Content="Розрахувати прогноз (CLV)" Width="180" Margin="10,0,0,0" Click="Predict_Click" Background="#FF90EE90"/>
                </StackPanel>
                <TextBlock x:Name="PredictionResultText" Text="Тут з'явиться результат..." FontSize="14" Margin="0,10,0,0" Foreground="DarkBlue"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Імпорт CSV" Width="120" Height="30" Click="ImportCsv_Click" Background="#FFADD8E6" Margin="0,0,10,0"/>
            <Button Content="Оновити сегментацію" Width="150" Height="30" Click="CalculateRfm_Click" Background="#FFDDDDDD"/>
            <Button Content="Закрити" Width="100" Height="30" Margin="10,0,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="Management_SYS.CardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Management_SYS"
        mc:Ignorable="d"
        Title="CardWindow" Height="500" Width="1100" MinWidth="1100" MinHeight="250">
    <Window.Resources>
        <local:WidthConverter x:Key="WidthConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <ListView x:Name="ContactHistoryListView" 
          VerticalAlignment="Top" 
          Margin="5, 5, 75, 5"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          ScrollViewer.CanContentScroll="False">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="NameOfCustomer" 
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListView}, Converter={StaticResource WidthConverter}, ConverterParameter='NameOfCustomer'}" 
                    DisplayMemberBinding="{Binding NameOfCustomer}" />

                    <GridViewColumn Header="PhoneNumberOfCustomer" 
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListView}, Converter={StaticResource WidthConverter}, ConverterParameter='PhoneNumberOfCustomer'}" 
                    DisplayMemberBinding="{Binding PhoneNumberOfCustomer}" />

                    <GridViewColumn Header="Contact_info" 
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListView}, Converter={StaticResource WidthConverter}, ConverterParameter='Contact_info'}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Contact_info}" TextWrapping="Wrap"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Time_of_contact" 
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListView}, Converter={StaticResource WidthConverter}, ConverterParameter='Time_of_contact'}" 
                    DisplayMemberBinding="{Binding Time_of_contact}" />

                    <GridViewColumn Header="Action" 
                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListView}, Converter={StaticResource WidthConverter}, ConverterParameter='Action'}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Click="DeleteButton_Click"
                                Command="{Binding DataContext.ApplyCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="ContactInfoTextBox" MinWidth="200" Margin="0,0,284,0"/>
            <xctk:DateTimePicker x:Name="NextContactDatePicker" HorizontalAlignment="Right" VerticalAlignment="Center" Width="150" Watermark="Select contact" Margin="552,0,78,0"/>
        </Grid>

        <Button x:Name="AddContactButton" Content="Add" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Center" Click="AddContactButton_Click" Grid.Row="1"/>
        <Button x:Name="ExitButton" Content="Exit" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top" Click="ExitButton_Click"/>
    </Grid>
</Window>
